<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TheHomePageFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/logoAsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/name_of_company_only_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginStart="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="15dp"
                android:background="@color/pink" />

            <androidx.cardview.widget.CardView
                android:layout_width="360dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="15dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop"
                    android:src="@drawable/donats" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/googlesans_bold"
                    android:text="Скидки!"
                    android:textColor="@color/pink"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="60dp"
                    android:fontFamily="@font/googlesans_regular"
                    android:text="С 1 по 15 мая скидки\nна ассортимент в размере 50%\nУспей побаловать себя!"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/logoInCard"
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="120dp"
                    android:src="@drawable/name_of_company_only_text" />
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="15dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:background="@drawable/circle_activited"
                    android:clickable="true"
                    android:contentDescription="Fisrt card" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/circle_not_activited"
                    android:clickable="true"
                    android:contentDescription="Second card" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/circle_not_activited"
                    android:clickable="true"
                    android:contentDescription="Third card" />

            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/googlesans_bold"
                android:text="Категории"
                android:textColor="@color/pink"
                android:textSize="15sp" />



            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">


                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_active_main"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:clickable="true">

                    <ImageButton
                        android:layout_marginStart="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/under_pic_shape"
                        android:scaleType="fitCenter"
                        android:src="@drawable/pink_donut" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:text="Пончики"
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:textColor="@color/white"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/btn_non_active_main"
                    android:layout_gravity="center"
                    android:gravity="left|center"
                    android:orientation="horizontal"
                    android:clickable="true">


                    <ImageButton
                        android:layout_marginStart="10dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/under_pic_shape_gray"
                        android:scaleType="fitCenter"
                        android:src="@drawable/coffe" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:fontFamily="@font/googlesans_regular"
                        android:text="Кофе"
                        android:textSize="12sp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:textColor="@color/pink"/>
                </LinearLayout>


            </LinearLayout>








        </LinearLayout>


    </ScrollView>


</FrameLayout>