<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent">



        <ImageView
            android:id="@+id/TheLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/thelogo" />

        <TextView
            android:id="@+id/Autohrization"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/googlesans_regular"
            android:layout_gravity="center_horizontal"
            android:text="Авторизация"
            android:textAlignment="center"
            android:textColor="@color/pink"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/TheLogo" />

        <EditText
            android:layout_marginTop="25dp"
            android:id="@+id/Phone"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/theLineColor"
            android:drawableStart="@drawable/phone"
            android:drawablePadding="18dp"
            android:layout_gravity="center"
            android:hint="Номер телефона"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="16sp"
            android:textColorHint="@color/grayText"
            android:ems="10"
            android:inputType="phone" />

        <EditText
            android:layout_marginTop="15dp"
            android:id="@+id/ThePassword"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:drawableStart="@drawable/lock"
            android:drawablePadding="50dp"
            android:textSize="16sp"
            android:backgroundTint="@color/theLineColor"
            android:fontFamily="@font/googlesans_regular"
            android:hint="Пароль"
            android:textColorHint="@color/grayText"
            android:ems="10"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/button"
            android:layout_marginTop="25dp"
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:background="@drawable/btn_main_activity_shape"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/googlesans_regular"
            android:textColorHint="@color/white"
            android:hint="Войти"/>

        <TextView
            android:id="@+id/textView"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:text="Регистрация"
            android:textColor="@color/grayText"
            />

        <LinearLayout
            android:layout_marginTop="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/VK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/vk_logo" />

            <ImageView
                android:id="@+id/Inst"
                android:layout_marginStart="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:srcCompat="@drawable/inst_logo" />
        </LinearLayout>


    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>